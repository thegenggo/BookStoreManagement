<Window x:Class="BookStoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManagement"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800" WindowStartupLocation="CenterScreen" Closed="CloseApplication">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="250" VerticalAlignment="Center">
            <Button x:Name="customersBtn" Content="Customers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50" Click="ShowCustomersWindow"/>
            <Button x:Name="booksBtn" Content="Books" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="50" Click="ShowBooksWindow"/>
            <Button x:Name="transactionsBtn" Content="Transactions" HorizontalAlignment="Left" Margin="0,200,0,0" VerticalAlignment="Top" Width="100" Height="50" Click="ShowTransactionsWindow"/>

        </Grid>

    </Grid>
</Window>
