<Window x:Class="BookStoreManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="loginBtn" Content="Login"  Margin="0,100,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="50" Click="Login" IsDefault="True" FontSize="20"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,50,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="usernameTxt" HorizontalAlignment="Left" Margin="100,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" FontSize="18"/>
            <PasswordBox x:Name="passwordTxt" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="200" FontSize="18"/>
        </Grid>
    </Grid>
</Window>
